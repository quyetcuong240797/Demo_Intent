<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_view_receive_result"
        android:layout_width="@dimen/width_text_view"
        android:layout_height="@dimen/height_text_view"
        android:textSize="@dimen/text_size_text_view_result"
        android:gravity="center"
        android:hint="Receive result"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_top_text_view_result"
        />
    <Button
        android:id="@+id/button_back"
        android:text="Back"
        android:textSize="@dimen/text_size_button"
        android:layout_width="@dimen/width_button_back"
        android:layout_height="@dimen/height_button_back"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/text_view_receive_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_top_button_back"/>
</android.support.constraint.ConstraintLayout>
